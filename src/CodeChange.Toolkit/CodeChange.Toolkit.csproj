<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Product>Toolkit.NET</Product>
		<Description>A library containing various extensions and tools built on top of the .NET Framework Class Library.</Description>
		<Copyright>Copyright © Code Change Ltd 2018</Copyright>
		<Authors>Code Change Ltd</Authors>
		<AssemblyVersion>1.2.2</AssemblyVersion>
		<Version>1.2.2</Version>
		<PackageLicenseUrl>https://github.com/codechangeltd/Toolkit.NET/blob/master/LICENSE</PackageLicenseUrl>
		<PackageProjectUrl>https://github.com/codechangeltd/Toolkit.NET</PackageProjectUrl>
		<RepositoryUrl>https://github.com/codechangeltd/Toolkit.NET</RepositoryUrl>
		<PackageIconUrl>https://raw.githubusercontent.com/codechangeltd/Toolkit.NET/master/src/CodeChange.Toolkit/Icon.png</PackageIconUrl>
		<RequireLicenseAcceptance>false</RequireLicenseAcceptance>
		<PackageReleaseNotes>Inverted time offset calculation.</PackageReleaseNotes>
		<Tags>CodeChange Toolkit .NET DOTNET C#</Tags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.CSharp" Version="4.5.0" />
		<PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
		<PackageReference Include="System.Runtime" Version="4.3.0" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Plugins\" />
	</ItemGroup>

</Project>
