<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<Product>Toolkit.NET</Product>
		<Description>A library containing Autofac tools and interface implementations.</Description>
		<Copyright>Copyright © Code Change Ltd 2018</Copyright>
		<Authors>Code Change Ltd</Authors>
		<AssemblyVersion>1.1.0</AssemblyVersion>
		<Version>1.1.0</Version>
		<PackageLicenseUrl>https://github.com/codechangeltd/Toolkit.NET/blob/master/LICENSE</PackageLicenseUrl>
		<PackageProjectUrl>https://github.com/codechangeltd/Toolkit.NET</PackageProjectUrl>
		<RepositoryUrl>https://github.com/codechangeltd/Toolkit.NET</RepositoryUrl>
		<PackageIconUrl>https://raw.githubusercontent.com/codechangeltd/Toolkit.NET/master/src/CodeChange.Toolkit.Autofac/Icon.png</PackageIconUrl>
		<RequireLicenseAcceptance>false</RequireLicenseAcceptance>
		<PackageReleaseNotes>Added plugin module</PackageReleaseNotes>
		<Tags>CodeChange Toolkit Autofac .NET DOTNET C#</Tags>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Autofac" Version="4.8.1" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\CodeChange.Toolkit.Domain\CodeChange.Toolkit.Domain.csproj" />
		<ProjectReference Include="..\CodeChange.Toolkit\CodeChange.Toolkit.csproj" />
	</ItemGroup>

</Project>
